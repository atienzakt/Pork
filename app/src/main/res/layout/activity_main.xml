<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="katienza.pork.MainActivity">


        <Button
        android:id="@+id/add_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="263dp"
        app:layout_constraintTop_toTopOf="parent"
            android:text="Add Record"
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp" />

    <Button
        android:id="@+id/add_sows"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Add Sows"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="3dp"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sow_record"
        app:layout_constraintLeft_toRightOf="@+id/sow_record" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/breeding_records"
        android:layout_width="267dp"
        android:layout_height="240dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sow_record"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/breeding_records"
        app:layout_constraintRight_toRightOf="@+id/breeding_records"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/breeding_records"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
